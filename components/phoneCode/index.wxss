/* components/phoneCode/index.wxss */
.dialog{
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  left: 0;
  top: 0;
  z-index: 9;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
}
.dialog .box{
  overflow: hidden;
  width: 75%;
  border-radius: 10rpx;
  background: #fff;
}
.dialog .box .dialog_title{
  position: relative;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1px solid #efefef;
  font-size: 16px;
  font-weight: bold;
}

.codeBtn{
  position: absolute;
  right: 0;
  top: 0;
  z-index: 999;
  /* color: #bbb; */
  /* width: 30%; */
  font-size: 26rpx;
  height: 80rpx;
  line-height: 80rpx;
}
